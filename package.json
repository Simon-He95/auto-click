{
  "publisher": "simonhe",
  "name": "auto-click",
  "displayName": "auto-click",
  "version": "0.0.22",
  "packageManager": "pnpm@8.15.9",
  "description": "auto-click",
  "author": "Simon He <https://github.com/Simon-He95>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/auto-click#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simon-He95/auto-click"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/auto-click/issues"
  },
  "sponsor": {
    "url": "https://github.com/Simon-He95/sponsor"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "autoclick",
      "properties": {
        "autoclick.second": {
          "type": "number",
          "default": 500,
          "description": "控制间隔多久触发自动点击"
        },
        "autoclick.updateSecond": {
          "type": "number",
          "default": 500,
          "description": "如果下一次状态间隔多久没变化时触发自动点击"
        }
      }
    }
  },
  "scripts": {
    "dev": "pnpm build --watch",
    "test": "vitest",
    "build": "tsup src/index.ts --external vscode",
    "pack": "vsce package --no-dependencies",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "publish": "vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@types/node": "^18.19.111",
    "@types/vscode": "1.77.0",
    "@vscode-use/utils": "^0.1.58",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^9.11.1",
    "eslint": "^8.57.1",
    "tsup": "^6.7.0",
    "typescript": "^5.7.3",
    "vitest": "^0.29.8"
  }
}
